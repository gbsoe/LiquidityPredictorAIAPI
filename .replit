modules = ["python-3.11", "postgresql-16", "python3"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "pkg-config", "qhull", "tcl", "tk"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SolPool Insight"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "60sec-Defi-API-Test"

[[workflows.workflow]]
name = "SolPool Insight"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run solpool_insight.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "60sec-Defi-API-Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_60sec_test.py"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
